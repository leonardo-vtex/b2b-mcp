{
  "version": 2,
  "builds": [
    { "src": "apps/backend/src/server.ts", "use": "@vercel/node" },
    { "src": "apps/frontend/package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/apps/backend/src/server.ts" },
    { "src": "/(.*)", "dest": "/apps/frontend/$1" }
  ]
} 