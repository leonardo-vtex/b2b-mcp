{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/server.ts"
    },
    {
      "src": "/health",
      "dest": "/src/server.ts"
    },
    {
      "src": "/products",
      "dest": "/src/server.ts"
    },
    {
      "src": "/suppliers",
      "dest": "/src/server.ts"
    },
    {
      "src": "/procure",
      "dest": "/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
} 